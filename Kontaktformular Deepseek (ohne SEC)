document.getElementById('contactForm').addEventListener('submit', function(event) { 

    event.preventDefault(); // Verhindert das Neuladen der Seite 

     

    // Formulardaten auslesen 

    const name = document.getElementById('name').value; 

    const email = document.getElementById('email').value; 

    const subject = document.getElementById('subject').value; 

    const message = document.getElementById('message').value; 

     

    // Einfache Validierung 

    if (!name || !email || !subject || !message) { 

        alert('Bitte f端llen Sie alle Felder aus.'); 

        return; 

    } 

     

    if (!validateEmail(email)) { 

        alert('Bitte geben Sie eine g端ltige E-Mail-Adresse ein.'); 

        return; 

    } 

     

    // Erfolgsmeldung anzeigen 

    const successMessage = document.getElementById('successMessage'); 

    successMessage.textContent = 'Vielen Dank f端r Ihre Nachricht! Wir werden uns bald bei Ihnen melden.'; 

    successMessage.style.display = 'block'; 

     

    // Formular zur端cksetzen (optional) 

    document.getElementById('contactForm').reset(); 

     

    // Erfolgsmeldung nach 5 Sekunden ausblenden (optional) 

    setTimeout(() => { 

        successMessage.style.display = 'none'; 

    }, 5000); 

}); 

 

// Funktion zur E-Mail-Validierung 

function validateEmail(email) { 

    const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/; 

    return re.test(email); 

} 
