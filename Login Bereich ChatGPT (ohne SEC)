const loginForm = document.getElementById("loginForm"); 

const errorMsg = document.getElementById("errorMsg"); 

  

// Beispiel-Benutzer (fest kodiert – nur für Demos!) 

const validUser = { 

  username: "mitglied", 

  password: "passwort123" 

}; 

  

loginForm.addEventListener("submit", function (e) { 

  e.preventDefault(); // Verhindert Seitenreload 

  

  const enteredUsername = document.getElementById("username").value; 

  const enteredPassword = document.getElementById("password").value; 

  

  if ( 

    enteredUsername === validUser.username && 

    enteredPassword === validUser.password 

  ) { 

    // Erfolgreicher Login 

    window.location.href = "mitgliedsbereich.html"; // Weiterleitung 

  } else { 

    // Fehlerhafte Eingabe 

    errorMsg.textContent = "Benutzername oder Passwort ist falsch."; 

  } 

}); 
